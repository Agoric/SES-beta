{
  "name": "@endo/compartment-mapper",
  "version": "0.2.4+1-dev",
  "description": "The compartment mapper assembles Node applications in a sandbox",
  "keywords": [
    "node",
    "endo",
    "package",
    "compartment"
  ],
  "author": "Endo contributors",
  "license": "Apache-2.0",
  "homepage": "https://github.com/endojs/endo/tree/master/packages/compartment-mapper#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endojs/endo.git"
  },
  "bugs": {
    "url": "https://github.com/endojs/endo/issues"
  },
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./import.js": "./import.js",
    "./archive.js": "./archive.js",
    "./import-archive.js": "./import-archive.js",
    "./bundle.js": "./bundle.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "exit 0",
    "lint": "yarn lint:types && yarn lint:js",
    "lint-fix": "eslint --fix '**/*.js'",
    "lint:js": "eslint '**/*.js'",
    "lint:types": "tsc --build jsconfig.json",
    "test": "ava"
  },
  "dependencies": {
    "@endo/cjs-module-analyzer": "^0.1.0",
    "@endo/static-module-record": "^0.4.1",
    "@endo/zip": "^0.1.0",
    "ses": "^0.12.7"
  },
  "devDependencies": {
    "@agoric/eslint-config": "^0.3.6",
    "ava": "^3.12.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "typescript": "^4.0.5"
  },
  "files": [
    "LICENSE*",
    "archive.js",
    "bundle.js",
    "import-archive.js",
    "import.js",
    "index.d.ts",
    "index.js",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m"
  }
}
