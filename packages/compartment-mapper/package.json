{
  "name": "@agoric/compartment-mapper",
  "version": "0.2.4+1-dev",
  "description": "The compartment mapper assembles Node applications in a sandbox",
  "author": "Agoric",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/compartment-mapper.cjs",
  "module": "./src/main.js",
  "browser": "./dist/compartment-mapper.umd.js",
  "unpkg": "./dist/compartment-mapper.umd.js",
  "exports": {
    "import": "./src/main.js",
    "require": "./dist/compartment-mapper.cjs",
    "browser": "./dist/compartment-mapper.umd.js"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "clean": "rm -rf dist",
    "lint": "yarn lint:types && yarn lint:js",
    "lint-fix": "eslint --fix '**/*.js'",
    "lint:js": "eslint '**/*.js'",
    "lint:types": "tsc --build jsconfig.json",
    "prepublish": "yarn clean && yarn build",
    "test": "ava"
  },
  "dependencies": {
    "@endo/cjs-module-analyzer": "^0.1.0",
    "@endo/static-module-record": "^0.1.0",
    "@endo/syrup": "^0.1.0",
    "@endo/zip": "^0.1.0",
    "ses": "^0.12.7"
  },
  "devDependencies": {
    "@agoric/eslint-config": "^0.1.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "ava": "^3.12.1",
    "rollup": "^1.31.0"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": []
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "files": [
    "LICENSE*",
    "dist",
    "src"
  ]
}
