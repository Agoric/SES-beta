{
  "name": "@agoric/make-hardener",
  "version": "0.1.1+1-dev",
  "description": "Create a 'hardener' which freezes the API surface of a set of objects",
  "author": "Agoric",
  "license": "Apache-2.0",
  "keywords": [
    "deepFreeze",
    "harden",
    "Object.freeze",
    "freeze"
  ],
  "homepage": "https://github.com/Agoric/packages/make-hardener#readme",
  "bugs": {
    "url": "https://github.com/Agoric/make-hardener/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/ses-shim.git"
  },
  "files": [
    "dist",
    "src",
    "LICENSE*"
  ],
  "directories": {
    "test": "test"
  },
  "type": "module",
  "main": "./dist/make-hardener.cjs",
  "module": "./src/main.js",
  "browser": "./dist/make-hardener.umd.js",
  "unpkg": "./dist/make-hardener.umd.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./src/main.js",
      "require": "./dist/make-hardener.cjs",
      "browser": "./dist/make-hardener.umd.js"
    }
  },
  "scripts": {
    "prepublish": "yarn run clean && yarn build",
    "clean": "rm -rf dist",
    "lint": "yarn lint:types && yarn lint:js",
    "lint:types": "tsc --build jsconfig.json",
    "lint:js": "eslint '**/*.js'",
    "lint-fix": "eslint --fix '**/*.js'",
    "test": "ava",
    "build": "rollup --config rollup.config.js"
  },
  "devDependencies": {
    "@agoric/eslint-config": "^0.1.0+1-dev",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "babel-eslint": "^10.0.3",
    "rollup": "1.31.0",
    "rollup-plugin-terser": "^5.1.3",
    "ava": "^3.12.1"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "require": []
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  }
}
