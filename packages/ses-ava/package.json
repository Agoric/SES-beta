{
  "name": "@agoric/ses-ava",
  "version": "0.1.1+1-dev",
  "description": "Virtualize Ava's test to work better under SES.",
  "author": "Agoric",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/main.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./src/main.js"
    }
  },
  "scripts": {
    "lint": "yarn lint:types && yarn lint:js",
    "lint:types": "tsc --build jsconfig.json",
    "lint:js": "eslint '**/*.js'",
    "lint-fix": "eslint --fix '**/*.js'",
    "test": "yarn ava"
  },
  "dependencies": {
    "ses": "^0.12.7"
  },
  "devDependencies": {
    "@agoric/eslint-config": "^0.3.6",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "ava": "^3.12.1",
    "prettier": "^1.19.1",
    "rollup-plugin-terser": "^5.1.3"
  },
  "ava": {
    "files": [
      "*test*/**/test-*.js"
    ],
    "require": []
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "files": [
    "LICENSE*",
    "src",
    "exported.js"
  ],
  "publishConfig": {
    "access": "public"
  }
}
