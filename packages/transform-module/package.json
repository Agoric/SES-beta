{
  "name": "@agoric/transform-module",
  "version": "0.4.1+1-dev",
  "description": "Transform for evaluating ES modules as Javascript programs",
  "keywords": ["ses", "StaticModuleRecord", "modules", "ESM"],
  "author": "Agoric",
  "license": "Apache-2.0",
  "homepage": "https://github.com/Agoric/SES-shim/tree/master/packages/transform-module#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/SES-shim.git"
  },
  "bugs": {
    "url": "https://github.com/Agoric/SES-shim/issues"
  },
  "type": "module",
  "parsers": {
    "js": "mjs"
  },
  "main": "./dist/transform-module.cjs",
  "module": "./src/main.js",
  "browser": "./dist/transform-module.umd.js",
  "unpkg": "./dist/transform-module.umd.js",
  "types": "./index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./src/main.js",
      "require": "./dist/transform-module.cjs",
      "browser": "./dist/transform-module.umd.js"
    }
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "clean": "rm -rf dist",
    "cover": "nyc ava",
    "lint": "yarn lint:types && yarn lint:js",
    "lint:types": "tsc --build jsconfig.json",
    "lint:js": "eslint '**/*.js'",
    "lint-fix": "eslint --fix '**/*.js'",
    "prepublish": "yarn clean && yarn build",
    "test": "ava"
  },
  "dependencies": {
    "@agoric/babel-standalone": "^7.9.5"
  },
  "devDependencies": {
    "@agoric/make-simple-evaluate": "0.1.0",
    "@ava/babel": "^1.0.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "ava": "^3.12.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "ses": "0.12.0",
    "rollup": "1.31.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "^5.1.3",
    "typescript": "^4.0.5"
  },
  "files": [
    "LICENSE*",
    "dist",
    "src",
    "index.js",
    "index.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m"
  }
}
